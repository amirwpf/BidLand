@model ProductRepoDto
@using App.Domin.Core._01_Purchause.Contracts.Repositories.Dtos
@{
    ViewBag.PageTitle = "ایجاد محصول جدید";
}



<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
        <h1 class="app-page-title">Settings</h1>
        <hr class="mb-4">
        <div class="row g-4 settings-section">

            <div class="col-12 col-md-6">
                <div class="app-card app-card-settings shadow-sm p-4">

                    <div class="app-card-body">
                        <form class="settings-form" method="post" asp-action="Create">

                            <div class="mb-3">
                                <input type="file" asp-for="ImageFile" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">دسته بندی</label>
                                @Html.DropDownList("CategoryId", @ViewBag.Categories as SelectList , "انتخاب دسته بندی", new { @class = "form-control"})
                            </div>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">نام کالا</label>
                                <input type="text" class="form-control" asp-for="Name" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="BasePrice" class="form-label">قیمت</label>
                                <input type="text" class="form-control" asp-for="BasePrice" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">شرح</label>
                                <input type="text" class="form-control" asp-for="Description" required>
                            </div>
                            <button type="submit" class="btn app-btn-primary">ایجاد</button>
                        </form>
                    </div><!--//app-card-body-->

                </div><!--//app-card-->
            </div>
        </div><!--//row-->

    </div><!--//container-fluid-->
</div><!--//app-content-->
