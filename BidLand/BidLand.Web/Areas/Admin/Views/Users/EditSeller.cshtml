@using App.Domin.Core._02_Users.Contracts.Repositories.Dtos;
@model SellerRepoDto

@{
    ViewBag.PageTitle = "ویرایش فروشنده";
}



<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
        <h1 class="app-page-title">@ViewBag.PageTitle</h1>
        <hr class="mb-4">
        <div class="row g-4 settings-section">

            <div class="col-12 col-md-6">
                <div class="app-card app-card-settings shadow-sm p-4">

                    <div class="app-card-body">
                        <form class="settings-form" method="post" asp-action="EditSeller">

                            @Html.HiddenFor(x=>x.UserId)
                            <div class="mb-3">
                                <label asp-for="User.Firstname" class="form-label">نام </label>
                                <input type="text" class="form-control" asp-for="User.Firstname" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="User.Lastname" class="form-label">نام خانوادگی</label>
                                <input type="text" class="form-control" asp-for="User.Lastname" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CommissionPercentage" class="form-label">درصد کمیسیون</label>
                                <input class="form-control" asp-for="CommissionPercentage" required>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label">فعال</label>
                                <input type="checkbox" asp-for="IsActive" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="IsBan" class="form-label">دسترسی مسدود</label>
                                <input type="checkbox" asp-for="IsBan" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="IsDelete" class="form-label">حذف شده</label>
                                <input type="checkbox" asp-for="IsDelete" />
                            </div>
                            <button type="submit" class="btn app-btn-primary">وایرایش</button>
                        </form>
                    </div><!--//app-card-body-->

                </div><!--//app-card-->
            </div>


        </div><!--//row-->

    </div><!--//container-fluid-->
</div><!--//app-content-->
