
@using App.Domin.Core._01_Purchause.Contracts.Repositories.Dtos
@using BidLand.Framework.Common
@model List<BoothRepoDto>
@{
	ViewBag.PageTitle = "فروشگاه ها";
}
<div class="app-content pt-3 p-md-3 p-lg-4">
	<div class="container-xl">

		<div class="row g-3 mb-4 align-items-center justify-content-between">
		</div><!--//row-->

		<nav id="products-table-tab" class="products-table-tab app-nav-tabs nav shadow-sm flex-column flex-sm-row mb-4">
			<h2 class="flex-sm-fill text-sm-center nav-link active" id="product-pending-tab" data-bs-toggle="tab" href="#products-pending" role="tab" aria-controls="products-pending" aria-selected="true">همه فروشگاه ها</h2>
		</nav>

		<div class="tab-content" id="products-table-tab-content">
			<div class="tab-pane fade show active" id="products-pending" role="tabpanel" aria-labelledby="products-all-tab">
				<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
					@foreach (BoothRepoDto p in Model)
					{
						<div class="col">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title">@p.Name</h5>
									<p class="card-text">@p.Description</p>
									<ul class="list-group list-group-flush">
										<li class="list-group-item">شناسه: @p.Id</li>
										<li class="list-group-item">نام فروشنده: @p.Seller.User.Firstname @p.Seller.User.Lastname</li>
										<li class="list-group-item">تاریخ ایجاد: @DateConvertor.ConvertGregorianToPersian(p.InsertionDate??DateTime.Now)</li>
									</ul>
									<div class="badge-container mt-3">
										@if (p.Seller.Medal.LevelType == App.Domin.Core._03_Extras.Enums.MedalEnum.Bronze)
										{
											<span class='badge bg-warning'>سطح برنزی</span>
										}
										else if (p.Seller.Medal.LevelType == App.Domin.Core._03_Extras.Enums.MedalEnum.Silver)
										{
											<span class='badge bg-secondary'>سطح نقره ای</span>
										}
										else if (p.Seller.Medal.LevelType == App.Domin.Core._03_Extras.Enums.MedalEnum.Gold)
										{
											<span class='badge bg-success'>سطح طلایی</span>
										}
									</div>
									<a href="/product/boothdetail/@p.Id" class="btn btn-primary mt-3">مشاهده فروشگاه</a>
								</div>
							</div>
						</div>
					}
				</div><!--//row-->
			</div><!--//tab-pane-->
		</div><!--//tab-content-->
	</div><!--//container-fluid-->
</div><!--//app-content-->
