@model ProductInfoVM

<body>

	<div class="container mt-5">

		<!-- Product Section -->
		<div class="row">
			<div class="col-md-6">
				<div id="productCarousel" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner">
						@if (Model.Product.Images != null)
						{
							@foreach (var img in Model.Product.Images)
							{
								<div class="carousel-item @(img == Model.Product.Images.First() ? "active" : "")">
									<img src="/uploads/products/@img.Url" alt="Product Image" class="d-block w-100" style="width: 300px; height: 300px;">
								</div>
							}
						}
						@*<div class="carousel-item">
						<img src="https://via.placeholder.com/400" alt="Product Image 2" class="d-block w-100">
						</div>
						<!-- End of Sample Images -->*@
					</div>
					<a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
			<div class="col-md-6 card">
				<h2>@Model.Product.Name</h2>
				<hr/>
				<h3>مشخصات کالا</h3>
				<p><strong>قیمت پایه :</strong> @Model.Product.BasePrice</p>
				<p><strong>شرح کالا:</strong> @Model.Product.Description</p>
			</div>
		</div>

		<!-- Booth Information Table -->
		<div class="row mt-5">
			<div class="col-md-12">
				<h2>عرضه کنندگان این کالا</h2>
				<table class="table">
					<thead>
						<tr>
							<th>نام فروشگاه</th>
							<th>سطح فروشگاه</th>
							<th>قیمت</th>
							<th>وضعیت قیمت</th>
							<th>توضیحات</th>
							<th>عملیات</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Stocks)
						{
							<!-- Sample Row, Repeat as Needed -->
							<tr>
								<td>@item.Booth.Name</td>
								<td>
									@if(item.Booth.Seller.Medal.LevelType ==App.Domin.Core._03_Extras.Enums.MedalEnum.Bronze)
									{
										<span class='badge bg-gray'>سطح برنزی</span>
									}
									@if (item.Booth.Seller.Medal.LevelType == App.Domin.Core._03_Extras.Enums.MedalEnum.Silver)
									{
											<span class='badge bg-secondary'>سطح نقره ای</span>
									}
									@if (item.Booth.Seller.Medal.LevelType == App.Domin.Core._03_Extras.Enums.MedalEnum.Gold)
									{
											<span class='badge bg-success'>سطح طلایی</span>
									}
								</td>
								<td>@item.Price</td>
								<td>
									@if (item.Price > item.Product.BasePrice)
									{
										<span class='badge bg-danger'>قیمت فروشنده بالاتر از متوسط بازار</span>
									}
									@if (item.Price == item.Product.BasePrice)
									{
										<span class='badge bg-secondary'>قیمت فروشنده برابر از متوسط بازار</span>
									}
									@if (item.Price < item.Product.BasePrice)
									{
										<span class='badge bg-success'>قیمت فروشنده کمتر از متوسط بازار</span>
									}
								</td>
								<td>@item.AdditionalDescription</td>
								<td><a href="/product/stockinfo/@item.Id" class="btn btn-primary">مشاهده محصول</a></td>
							</tr>
							<!-- End of Sample Row -->
						}

					</tbody>
				</table>
			</div>
		</div>

	</div>

</body>